// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk Paket Hiking/Pendakian
model HikingPackage {
  id          String    @id @default(uuid())
  name        String
  price       Int
  duration    String
  difficulty  String
  distance    String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// Model untuk Basecamp
model Basecamp {
  id          String    @id @default(uuid())
  name        String
  price       Int       // harga per malam
  capacity    Int
  location    String
  facilities  String    // JSON string berisi array fasilitas
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// Model untuk User
model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  phone     String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
}

// Model untuk Booking
model Booking {
  id               String          @id @default(uuid())
  bookingNumber    String          @unique
  
  // Customer Info
  customerName     String
  customerEmail    String
  customerPhone    String
  
  // Booking Info
  hikingPackageId  String?
  hikingPackage    HikingPackage?  @relation(fields: [hikingPackageId], references: [id])
  basecampId       String?
  basecamp         Basecamp?       @relation(fields: [basecampId], references: [id])
  hikingDate       DateTime
  numberOfPeople   Int
  participants     String          // JSON string berisi array data peserta
  
  // Payment Info
  totalPrice       Int
  paymentMethod    String?         // transfer_bank, e_wallet, credit_card
  paymentStatus    String          @default("pending") // pending, paid, failed
  paymentProof     String?         // URL/path ke bukti transfer
  
  // Status
  bookingStatus    String          @default("pending") // pending, confirmed, cancelled, completed
  notes            String?
  
  // Relations (optional - jika sudah ada user login)
  userId           String?
  user             User?           @relation(fields: [userId], references: [id])
  
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}
