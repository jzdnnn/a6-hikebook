<!-- Filter Module -->
<div class="sidebar-module filter-module">
  <div class="module-header">
    <h4>� Filter Jalur</h4>
  </div>
  
  <div class="filter-group">
    <label for="price-range">Harga Maksimal: Rp <span id="price-value"><%= maxPrice.toLocaleString('id-ID') %></span></label>
    <input type="range" id="price-range" name="price" min="0" max="<%= maxPrice %>" value="<%= maxPrice %>" step="50000" style="width: 100%;">
  </div>

  <div class="filter-group">
    <h5>Tingkat Kesulitan</h5>
    <% difficulties.forEach(difficulty => { %>
      <div class="checkbox-item">
        <input type="checkbox" id="<%= difficulty.replace(/\s+/g, '-') %>" name="difficulty" value="<%= difficulty %>">
        <label for="<%= difficulty.replace(/\s+/g, '-') %>"><%= difficulty %></label>
      </div>
    <% }); %>
  </div>

  <div class="filter-actions">
    <button class="filter-button">Terapkan Filter</button>
    <button class="reset-button">Reset</button>
  </div>
</div>

